{% comment %}
This is layout for bib entries which have the flag Teaching=true
{% endcomment %}

<div class="row">
  {% if site.enable_publication_thumbnails %}
    <div class="col col-sm-2 abbr">
      {%- if entry.abbr -%}
        {%- if site.data.venues[entry.abbr] -%}
          {% assign venue_style = null %}
          {% if site.data.venues[entry.abbr].color != blank %}
            {% assign venue_style = site.data.venues[entry.abbr].color | prepend: 'style="background-color:' | append: '"' %}
          {%- endif -%}
          <abbr
            class="badge rounded w-100"
            {% if venue_style %}
              {{ venue_style }}
            {% endif -%}
          >
            {% if site.data.venues[entry.abbr].url %}
              <a href="{{ site.data.venues[entry.abbr].url }}">{{ entry.abbr }}</a>
            {% else %}
              <div>{{- entry.abbr -}}</div>
            {% endif %}
          </abbr>
        {% else %}
          <abbr class="badge rounded w-100">{{ entry.abbr }}</abbr>
        {% endif %}
      {% endif %}
      {% if entry.preview %}
        {% if entry.preview contains '://' %}
          <img class="preview z-depth-1 rounded" src="{{ entry.preview }}">
        {% else %}
          {% assign entry_path = entry.preview | prepend: '/assets/img/publication_preview/' %}
          {%
          include figure.liquid
          loading="eager"
          path=entry_path
          sizes = "200px"
          class="preview z-depth-1 rounded"
          zoomable=true
          avoid_scaling=true
          alt=entry.preview
          %}
        {% endif %}
      {% endif %}
    </div>
  {% endif %}





<!-- Entry bib key -->
  <div id="{{ entry.key }}" class="col-sm-8">
  

    {% comment %} Title {% endcomment %}
    <div class="course_title">{{ entry.title }}</div>
  
    {% comment %} Institution {% endcomment %}
    <div class="course_description">{{ entry.venue }}</div>

    {% comment %} Degree type, Course year {% endcomment %}
    {% if entry.degree %}  
      <div class="course_description">
        {% if entry.courseyear %}
          {{ entry.degree }}, {{ entry.courseyear }}
        {% else %}
          {{ entry.degree }}, {{ entry.courseyear }}
        {% endif %}
      </div>
    {% endif %}

    {% comment %} Note {% endcomment %}
    {% if entry.note %}
      <div class="course_description">{{ entry.note }}</div>
    {% endif %}

    {% comment %} Links/Buttons {% endcomment %}
    <div class="links">
      {% if entry.award %}
        <a class="award btn btn-sm z-depth-0" role="button">
        {%- if entry.award_name %}{{ entry.award_name }}{% else %}Awarded{% endif -%}
      </a>
      {% endif %}
      {%- if entry.abstract %}
        <a class="abstract btn btn-sm z-depth-0" role="button">About</a>
      {%- endif %}
      {%- if entry.html %}
        <a href="{{ entry.html }}" class="btn btn-sm z-depth-0" role="button">HTML</a>
      {%- endif %}
      {%- if entry.summary %}
        {% if entry.summary contains '://' -%}
          <a href="{{ entry.summary }}" class="btn btn-sm z-depth-0" role="button">Summary</a>
        {%- else -%}
          <a href="{{ entry.summary | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Summary</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.lecturenotes %}
        {% if entry.lecturenotes contains '://' -%}
          <a href="{{ entry.lecturenotes }}" class="btn btn-sm z-depth-0" role="button">Lecture Notes</a>
        {%- else -%}
          <a href="{{ entry.lecturenotes | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Lecture Notes</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.lecturenotes1 %}
        {% if entry.lecturenotes contains '://' -%}
          <a href="{{ entry.lecturenotes1 }}" class="btn btn-sm z-depth-0" role="button">Notes Pt1</a>
        {%- else -%}
          <a href="{{ entry.lecturenotes1 | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Notes Pt1</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.lecturenotes2 %}
        {% if entry.lecturenotes contains '://' -%}
          <a href="{{ entry.lecturenotes2 }}" class="btn btn-sm z-depth-0" role="button">Notes Pt2</a>
        {%- else -%}
          <a href="{{ entry.lecturenotes2 | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Notes Pt2</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.lecturenotes3 %}
        {% if entry.lecturenotes contains '://' -%}
          <a href="{{ entry.lecturenotes3 }}" class="btn btn-sm z-depth-0" role="button">Notes Pt3</a>
        {%- else -%}
          <a href="{{ entry.lecturenotes3 | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Notes Pt3</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.lectureslides %}
        {% if entry.lectureslides contains '://' -%}
          <a href="{{ entry.lectureslides }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
        {%- else -%}
          <a href="{{ entry.lectureslides | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.revision %}
        {% if entry.revision contains '://' -%}
          <a href="{{ entry.revision }}" class="btn btn-sm z-depth-0" role="button">Revision Guide</a>
        {%- else -%}
          <a href="{{ entry.revision | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Revision Guide</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.blog %}
        <a href="{{ entry.blog }}" class="btn btn-sm z-depth-0" role="button">Blog</a>
      {%- endif %}
      {%- if entry.code %}
        <a href="{{ entry.code }}" class="btn btn-sm z-depth-0" role="button">Code</a>
      {%- endif %}
      {%- if entry.exercises %}
        {% if entry.exercises contains '://' -%}
          <a href="{{ entry.exercises }}" class="btn btn-sm z-depth-0" role="button">Exercises</a>
        {%- else -%}
          <a href="{{ entry.exercises | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Exercises</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.exam %}
        {% if entry.exam contains '://' -%}
          <a href="{{ entry.exam }}" class="btn btn-sm z-depth-0" role="button">Exam</a>
        {%- else -%}
          <a href="{{ entry.exam | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Exam</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.poster %}
        {% if entry.poster contains '://' -%}
          <a href="{{ entry.poster }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
        {%- else -%}
          <a href="{{ entry.poster | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
        {%- endif %}
      {%- endif %}
      {%- if entry.slides %}
        {% if entry.slides contains '://' -%}
          <a href="{{ entry.slides }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
        {%- else -%}
          <a href="{{ entry.slides | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Slides</a>
        {%- endif %}
      {%- endif %}
      {% if entry.video and site.enable_video_embedding %}
        <a class="abstract btn btn-sm z-depth-0" role="button">Video</a>
      {% elsif entry.video %}
        <a href="{{ entry.video }}" class="btn btn-sm z-depth-0" role="button">Video</a>
      {% endif %}
      {%- if entry.website %}
        <a href="{{ entry.website }}" class="btn btn-sm z-depth-0" role="button">Website</a>
      {%- endif %}
      {%- if entry.webpage %}
        <a href="{{ entry.webpage }}" class="btn btn-sm z-depth-0" role="button">Webpage</a>
      {%- endif %}
      {%- if entry.canvas %}
        <a href="{{ entry.canvas }}" class="btn btn-sm z-depth-0" role="button">Canvas</a>
      {%- endif %}
      {%- if entry.taster %}
        {% if entry.taster contains '://' -%}
          <a href="{{ entry.taster }}" class="btn btn-sm z-depth-0" role="button">Taster</a>
        {%- else -%}
          <a href="{{ entry.taster | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Taster</a>
        {%- endif %}
      {%- endif %}
    </div>


      {% if entry.award %}
      <!-- Hidden Award block -->
      <div class="award hidden d-print-inline">
        <p>{{ entry.award | markdownify }}</p>
      </div>
    {% endif %}

    {% if entry.abstract -%}
      {% comment %} Hidden abstract block {% endcomment %}
      <div class="abstract hidden">
        <p>{{ entry.abstract }}</p>
      </div>
    {%- endif -%}


    {% if entry.video and site.enable_video_embedding %}
      <!-- Hidden video block -->
      <div class="abstract hidden">
        <div style="text-align: center;">{% include video.liquid path=entry.video class="img-fluid rounded z-depth-1" controls=true %}</div>
      </div>
    {% endif %}
  </div>
</div>
