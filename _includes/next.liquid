<div class="next">
  {% if site.next != blank %}
    {% assign next_size = site.next | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.future_announcements.scrollable and next_size > 3 %}
        style="max-height: 40vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign next = site.next | reverse %}
        {% if include.limit and page.future_announcements.limit %}
          {% assign next_limit = page.future_announcements.limit %}
        {% else %}
          {% assign next_limit = next_size %}
        {% endif %}
        {% for item in next limit: next_limit %}
          <tr>
           <th scope="row" style="width: 10%">{{ item.date | date: "%m/%Y" }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No upcoming events so far...</p>
  {% endif %}
</div>


          
