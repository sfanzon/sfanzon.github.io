
          <div class="next">
            {% if site.next != blank -%}
            {%- assign next_size = site.next | size -%}
            <div class="table-responsive" {% if site.next.scrollable and next_size > 3 %}style="max-height: 10vw"{% endif %}>
              <table class="table table-sm table-borderless">
              {%- assign next = site.next -%}
              {% if site.next.limit %}
              {% assign next_limit = site.next.limit %}
              {% else %}
              {% assign next_limit = next_size %}
              {% endif %}
              {% for item in next limit: next_limit %}
                <tr>
                <th scope="row" style="width: 13%">{{ item.date | date: "%b %Y" }}</th>
                  <td>
                    {% if item.inline -%}
                      {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                    {%- else -%}
                      <a class="next-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
                    {%- endif %}
                  </td>
                </tr>
              {%- endfor %}
              </table>
            </div>
          {%- else -%}
            <p>No upcoming events so far...</p>
          {%- endif %}
          </div>

          
